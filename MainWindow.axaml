<Window
    x:Class="Mark1.MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Mark1"
    Width="400"
    Height="500"
    Background="#1F1F1F" 
    mc:Ignorable="d">

    <Window.Styles>
        <!--  Button Style -->
        <Style Selector="Button">
            <Setter Property="Background" Value="#B91C1C" />
            <Setter Property="Foreground" Value="White" /> 
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Padding" Value="10,5" />
            <Setter Property="CornerRadius" Value="5" />
            <Setter Property="HorizontalAlignment" Value="Center" />
        </Style>

        <!--  TextBox Style -->
        <Style Selector="TextBox">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Padding" Value="8" />
            <Setter Property="BorderBrush" Value="#FFD700" /> 
            <Setter Property="CornerRadius" Value="5" />
        </Style>

        <!--  TextBlock Style -->
        <Style Selector="TextBlock">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Foreground" Value="White" /> 
        </Style>
    </Window.Styles>

    <StackPanel Margin="20" Spacing="10">
        <TabControl Margin="5">
            <!--  Configuration Tab -->
            <TabItem Header="Configuration">
                <StackPanel>
                    <TextBlock FontWeight="Bold" Text="Select your provider:" />
                    <ComboBox
                        Name="ProviderComboBox"
                        MaxDropDownHeight="100"
                        SelectionChanged="ComboBox_SelectionChanged">
                        <ComboBoxItem>Open</ComboBoxItem>
                        <ComboBoxItem>Gemine</ComboBoxItem>
                        <ComboBoxItem>Huggy</ComboBoxItem>
                    </ComboBox>

                    <TextBlock FontWeight="Bold" Text="Key:" />
                    <TextBox Name="InputTextBoxApikey" Watermark="Enter your API key" />

                    <Separator
                        Height="1"
                        Margin="0,10,0,10"
                        Background="#A1A1A1" /> 

                    <!--  Save Configuration Button -->
                    <Button Click="ConfigurationProvider" Content="Save" />
                </StackPanel>
            </TabItem>

            <!--  Home Tab -->
            <TabItem Header="Home">
                <StackPanel>
                    <TextBlock FontWeight="Bold" Text="Enter your question:" />
                    <TextBox Name="InputTextBox" Watermark="Enter your questions..." />

                    <!--  Send Query Button -->
                    <Button Click="OnSendButtonClick" Content="Send" />

                    <Separator
                        Height="1"
                        Margin="0,10,0,10"
                        Background="#A1A1A1" /> 

                    <TextBlock FontWeight="Bold" Text="Result:" />
                    <TextBox
                        Name="ResponseTextBox"
                        Background="#2D2D2D"
                        IsReadOnly="True"
                        Watermark="Response" />
                </StackPanel>
            </TabItem>

            <!--  Help Tab -->
            <TabItem Header="Help">
                <StackPanel>
                    <TextBlock FontWeight="Bold" Text="Client the IA" />
                    <TextBlock FontWeight="Bold" Text="Ecuabyte Software" />
                    <Separator
                        Height="1"
                        Margin="0,10,0,10"
                        Background="#A1A1A1" /> 
                </StackPanel>
            </TabItem>
        </TabControl>
    </StackPanel>
</Window>
